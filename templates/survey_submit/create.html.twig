{% extends '@SonataAdmin/standard_layout.html.twig' %}

{%- block tab_menu -%}
    {{ knp_menu_render(admin.sidemenu("edit"), {
        'currentClass': 'active',
        'template': get_global_template('tab_menu_template')
    }, 'twig') }}
{%- endblock -%}

{% block sonata_admin_content %}
    {% block notice %}
        {% include '@SonataTwig/FlashMessage/render.html.twig' %}
    {% endblock notice %}

    <div class="sonata-ba-form">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h1>{{ measurementIndex.title }}</h1>
                    </div>
                    <div class="box-body">
                        <p>{{ measurementIndex.description }}</p>
                        <h1>¿Qué medimos?</h1>
                        <p>{{ measurementIndex.whatWeMeasure }}</p>
                        <h1>¿Cómo lo medimos?</h1>
                        <p>{{ measurementIndex.howWeMeasure }}</p>
                        <hr>
                        <p>Llene las siguientes preguntas</p>

                        {% form_theme form 'form_admin_fields.html.twig' %}

                        <div>
                            {{ form_start(form) }}
                                {% for field in form.children %}
                                    <div class="form-group">
                                        {{ form_row(field) }}
                                    </div>
                                {% endfor %}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
